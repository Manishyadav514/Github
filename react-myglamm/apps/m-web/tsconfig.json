{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@components/*": ["src/Components/*"],
      "@constants/*": ["src/Constants/*"],
      "@analytics/*": ["src/Analytics/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@layout/*": ["src/Layouts/*"],
      "@typesLib/*": ["../../libs/@types/*"],
      "@checkoutLib/*": ["../../libs/checkout/src/*"],
      "@productLib/*": ["../../libs/product/src/*"],
      "@PLPLib/*": ["../../libs/PLP/src/*"],
      "@libDesktop/*": ["../../libs/desktop/src/*"],
      "@libComponents/*": ["../../libs/UX/src/Components/*"],
      "@libConstants/*": ["../../libs/UX/src/Constants/*"],
      "@libAnalytics/*": ["../../libs/UX/src/Analytics/*"],
      "@libPages/*": ["../../libs/UX/src/pages/*"],
      "@libHooks/*": ["../../libs/UX/src/hooks/*"],
      "@libAPI/*": ["../../libs/UX/src/lib/*"],
      "@libStore/*": ["../../libs/UX/src/store/*"],
      "@libStyles/*": ["../../libs/UX/src/styles/*"],
      "@libUtils/*": ["../../libs/UX/src/utils/*"],
      "@libServices/*": ["../../libs/UX/src/services/*"],
      "@libLayouts/*": ["../../libs/UX/src/Layouts/*"]
    },
    "incremental": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "src/global.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/pages/index.tsx"]
}
